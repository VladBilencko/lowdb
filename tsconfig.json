{
  "extends": "@tsconfig/node12/tsconfig.json",
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/esm",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  }
}
